<main>
  <div class="post-container">
    {{#each posts as |post|}}
      <div class="post-tile">
        <a href="/post/{{post.id}}" class="post-link">
          <div class="post-container">
            <img class="post-tile-header-image" src="{{post.header_image}}" alt="picture for the article {{post.title}}" >
            <h2>{{post.title}}</h2>
            <h3>{{post.teaser}}</h3>
            <h3>published by {{post.user_id}} at {{post.dateCreated}}</h3>
          </div>
          </div>
        </a>
      </div>

    {{/each}}
  </div>

</main>