<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Squad Up</title>
    <link rel="stylesheet" href="/css/main.css">

        <link rel="stylesheet" href="/css/home.css">
        <link rel="stylesheet" href="/css/post.css">
        <link rel="stylesheet" href="/css/message-center.css">
        <link rel="stylesheet" href="/css/directory.css">
        <link rel="stylesheet" href="/css/profile.css">
        <link rel="stylesheet" href="/css/account.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

  </head>
  <body>
    <header>
      <nav class="custom-nav-bar">
            <a href="/">
                <div class="custom-nav-link logo">
                    <h2>Squad Up</h2>
                </div>
            </a>
            <div class="nav-link-container">
                <a href="/directory">
                {{#if logged_in}}
                    <div class="custom-nav-link">
                        <h2>Directory</h2>
                    </div>
                </a>
                <a href="/resume-builder">
                    <div class="custom-nav-link">
                        <h2>Resume Builder</h2>
                    </div>
                </a>
                <a href="/message-center">
                    <div class="custom-nav-link">
                        <h2>Message Center</h2>
                    </div>
                </a>

                <a href="/account">
                    <div class="custom-nav-link">
                        <h2>Account</h2>
                    </div>
                </a>
                <a id="logout-btn">
                    <div class=" custom-nav-link">
                        <h2>Logout</h2>
                    </div>
                </a>
                {{else}}
                <a href="/login">
                    <div class=" custom-nav-link">
                        <h2>Login</h2>
                    </div>
                </a>
                <a href="/sign-up">
                    <div class=" custom-nav-link">
                        <h2>sign up</h2>
                    </div>
                </a>
                {{/if}}
            </div>
            <div class="hamburger-postioner">
                <input type="checkbox" id="hamburger">
                <label for="hamburger" class="hamburger">
                    <span class="line"></span>
                    <span class="line"></span>
                    <span class="line"></span>
                </label>
            </div>
    </header>
    {{{body}}}
        <script src="/js/index.js"></script>
  </body>
