<main class="poster-container">
  <img
    class="post-header"
    src="{{header_image}}"
    alt="picture for the article {{post.title}}"
  />
  <div class="post-meta">
    <h1>{{title}}</h1>
    <h3>{{teaser}}</h3>
    <h3>by someone at {{dateCreated}} </h3>
  </div>
  <p>
    {{content}}
  </p>
</main>